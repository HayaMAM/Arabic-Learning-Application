<div class="container">
<h3>
<%= @collection.name %>
</h3>
<% if user_signed_in? && @collection.user_id == current_user.id %>
                          <%= link_to 'Delete', collection_path,
                          method: :delete,
                       data: { confirm: 'Are you sure?' } %>
                      <%end %>

<br><br>
<% @collection.words.each do |f| %>
<h5>
<%= link_to f.term, f %>
<%= link_to f.english_form, f %></h5>

<% end %>

<%= link_to 'Add a Word', new_word_path %>
</div>
