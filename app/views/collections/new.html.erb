<div class="container">
<div class="collection-new">

<%= form_for @collection do |form| %>
<div class="card" style="padding: 20px;">
<div>
    <strong >Add a New Collection </strong><br>
    <%= form.text_field :name, :required => true %>
  </div>
<br>
  <div>
  <%= form.label "Image" %>
  <%= form.file_field :image, :required => true %>
</div>
<br>
    <div class="actions">
<%= form.submit "Add"%>
</div>
<% end %>
</div>
</div>
</div>